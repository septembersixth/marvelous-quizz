    <div ng-controller="quizzController as ctrl" class="container">

        <img ng-src={{'img/upload/'+ctrl.currentTest.image}} class="row test-image" />



        <div class="row question">
            <div ng-repeat="question in ctrl.currentTest.questions">
            {{question.text}}
            <ul>
                <li class="option" ng-repeat="option in question.options"
                    ng-click="ctrl.setAnswer(option.id)"
                    ng-class="{active: ctrl.isActiveOption(option.id)}"
                    >
                    <button class="button-option"></button>
                    {{option.text}}
                </li>
            </ul>
            </div>
        </div>
        
        <p>{{ctrl.valid}}</p>

        <button ng-click="ctrl.nextTest()">
            next
        </button>

        <div ng-show="ctrl.state === 1" class="row explanation">
            <p>{{ctrl.currentTest.explanation}}</p>
        </div>
    </div>