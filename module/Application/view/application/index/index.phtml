<div ng-app="quizz">

    <div ng-controller="quizzController as ctrl">

        <img ng-src={{'img/upload/'+ctrl.currentTest.image}}  style='height:100px'/>

        <div class="question">
            <div ng-repeat="question in ctrl.currentTest.questions">
            {{question.text}}
            <ul>
                <li class="option" ng-repeat="option in question.options"
                    ng-click="ctrl.setAnswer(option.id)"
                    ng-class="{active: ctrl.isActiveOption(option.id)}"
                    >
                    {{option.text}}
                </li>
            </ul>
            </div>
        </div>

        <p>{{ctrl.currentTest.solutions}}</p>
        <p>{{ctrl.currentTest.explanation}}</p>
        <p>{{ctrl.answers}}</p>

        <p>{{ctrl.valid}}</p>

        <button ng-click="ctrl.nextTest()">
            next
        </button>
    </div>
</div>

<style>
    .active {
        color: red;
    }
</style>